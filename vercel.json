{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/stats", "destination": "/api/stats" },
    { "source": "/api/tickets", "destination": "/api/tickets/index" },
    { "source": "/api/tickets/:id", "destination": "/api/tickets/[id]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
